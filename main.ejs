        function dongho(){
            var today = new Date();
            var gio = today.getHours();
            var phut = today.getMinutes();
            var giay = today.getSeconds();
            document.getElementById('time').innerHTML =today;//gio+":"+phut+":"+giay
            setTimeout(dongho,1000);
        }
        dongho();
